<div class="container">

    <div class="row">

        <div class="col-md-12">

            <img src="/assets/img/burger.jpg" alt="Animated burger">

            <h1>Eat-Da-Burger!</h1>

        </div>

    </div>

    <div class="row">

        <div class="col-md-6">

            <div class="row">

                <div class="col-md-7">

                </div>
                <div class="col-md-5">
                    <ol>
                        {{#each burgers}}
                        {{#unless devoured}}
                        <li>
                            <p>{{this.burger_name}}<button class="change-devour" data-id="{{id}}">Devour it!</button>
                            </p>

                        </li>
                        {{/unless}}
                        {{/each}}
                    </ol>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <ol>
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    <p>{{this.burger_name}}</p>
                </li>
                {{/if}}
                {{/each}}
            </ol>
        </div>
    </div>

    <div class="row">

        <div class="col-md-12">

            <form class="create-form">

                <div class="text-center">
                    <input type="text" id="burger">
                </div>

                <div class="text-center">
                    <button type="submit" id="submit">Submit</button>
                </div>

                <p class="text-center">Enter a burger you want to eat and click the "Submit" button.</p>

            </form>
        </div>

    </div>

</div>