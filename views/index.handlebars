<img src="/assets/img/burger.jpg" alt="Animated burger">
<h1>Eat-Da-Burger!</h1>

<ol>
    {{#each burgers}}
        {{#unless devoured}}
            <li>
                <p>{{this.burger_name}}<button class="change-devour" data-id="{{id}}">Devour it!</button></p>

            </li>
        {{/unless}}
    {{/each}}
</ol>

<ol>
    {{#each burgers}}
        {{#if devoured}}
            <li>
                <p>{{this.burger_name}}</p>
            </li>
        {{/if}}
    {{/each}}
</ol>

<form class="create-form">

    <div class="form-group">
        <input type="text" id="burger">
    </div>

    <div class="button">
        <button type="submit" id="submit">Submit</button>
    </div>

    <p class="message">Enter a burger you want to eat and click the "Submit" button.</p>

</form>