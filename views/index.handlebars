{{!-- Main container for bootstrap --}}
<div class="container">

    {{!-- Top row for image and H1 --}}
    <div class="row">

        {{!-- Column in top row covering the entire row --}}
        <div class="col-md-12">

            {{!-- Burger image --}}
            <img src="/assets/img/burger.jpg" alt="Animated burger">

            {{!-- H1 for page --}}
            <h1>Eat-Da-Burger!</h1>

        </div>

    </div>

    {{!-- Middle row for lists --}}
    <div class="row">

        {{!-- Left column covering half of the row for not devoured list --}}
        <div class="col-md-6">

            {{!-- Row in left column --}}
            <div class="row">

                {{!-- Row broken down into two columns to force list to the right side --}}
                <div class="col-md-7">

                </div>

                {{!-- Second column with list forced to the right --}}
                <div class="col-md-5">

                    {{!-- Ordered list for not devoured burgers --}}
                    <ol>
                        {{#each burgers}}
                        {{#unless devoured}}
                        <li>
                            {{!-- Paragraph and button to devour a burger --}}
                            <p>{{this.burger_name}}<button class="change-devour" data-id="{{id}}">Devour it!</button></p>
                        </li>
                        {{/unless}}
                        {{/each}}
                    </ol>
                </div>
            </div>
        </div>

        {{!-- Second column in middle row --}}
        <div class="col-md-6">

            {{!-- Ordered list for devoured burgers --}}
            <ol>
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    <p>{{this.burger_name}}</p>
                </li>
                {{/if}}
                {{/each}}
            </ol>
        </div>
    </div>

    {{!-- Bottom row for input field, submit button and message to user --}}
    <div class="row">

        {{!-- Column covering entire row --}}
        <div class="col-md-12">

            {{!-- Form to create a burger --}}
            <form class="create-form">

                {{!-- Input field for user to enter burger name --}}
                <div class="text-center">
                    <input type="text" id="burger">
                </div>

                {{!-- Submit button to submit burger name --}}
                <div class="text-center">
                    <button type="submit" id="submit">Submit</button>
                </div>

                {{!-- Paragraph field for message shown to user --}}
                <p class="text-center">Enter a burger you want to eat and click the "Submit" button.</p>

            </form>
            
        </div>

    </div>

</div>